<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bluec.vtpow.mapper.LoginMapper">
	<resultMap type="com.bluec.vtpow.po.User" id="userMap">
        <id column="stu_id" property="stu_id" ></id>
        <result column="name" property="username"/>
        <result column="password" property="password"/>
    </resultMap>
    
    <select id="getpwdbyname" parameterType="String"  resultMap="userMap">
    	select * from user where stu_id=#{stu_id}
    </select>
    
    
</mapper>