<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bluec.vtpow.mapper.RoleMapper">
    <!--<resultMap type="com.bluec.vtpow.po.User" id="userMap">
        <id column="stu_id" property="stu_id" ></id>
        <result column="name" property="username"/>
        <result column="password" property="password"/>
    </resultMap>-->

    <select id="getRolesByUser" parameterType="String" resultType="com.bluec.vtpow.po.Role">
    	SELECT
	*
FROM
	role
WHERE
	role.rid IN (
		SELECT
			user_role.roleid
		FROM
			user_role
		WHERE
			user_role.userid = #{user_id}
	)
    </select>


</mapper>